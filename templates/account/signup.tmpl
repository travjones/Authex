<div class="container">
    <div class="row">
        <form id="signupform" name="signupform" method="post" class="six columns offset-by-three">
            <label class="u-full-width">Name</label>
            <input type="text" name="name" placeholder="Name" class="u-full-width" />

            <label class="u-full-width">Email</label>
            <input type="text" name="email" placeholder="Email" class="u-full-width" />

            <label class="u-full-width">Password</label>
            <input type="password" name="password" placeholder="Password" class="u-full-width" />

            <input type="submit" id="signupbtn" value="Sign Up!" class="u-full-width button-primary" />
        </form>
    </div>
</div>